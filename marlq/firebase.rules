rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Common functions
    function isLoggedIn() {
      return request.auth != null;
    }

    // Chat rules
    match /chats/{chatId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Gallery rules
    match /gallery/{imageId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // User profile rules
    match /userProfiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Streak rules
    match /userStreaks/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Voucher rules
    match /sirtheprogrammer/vouchers {
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/userStreaks/$(request.auth.uid)).data.streak % 7 == 0;
      allow write: if false;  // Only allow updates through the secure backend
    }

    // Default rules for other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
